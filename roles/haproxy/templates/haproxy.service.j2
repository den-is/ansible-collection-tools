# {{ ansible_managed }}
[Unit]
Description=HAProxy Load Balancer
Documentation=man:haproxy(1)
After=network-online.target rsyslog.service
Wants=network-online.target

[Service]
EnvironmentFile=-/etc/default/haproxy
EnvironmentFile=-/etc/sysconfig/haproxy
BindReadOnlyPaths=/dev/log:/var/lib/haproxy/dev/log
Environment="CONFIG=/etc/haproxy/haproxy.cfg"
Environment="PIDFILE=/run/haproxy.pid"
Environment="EXTRAOPTS=-S /run/haproxy-master.sock"
ExecStartPre={{ haproxy_prefix }}/sbin/haproxy -f $CONFIG -c -q
ExecStart={{ haproxy_prefix }}/sbin/haproxy -Ws -f $CONFIG -p $PIDFILE $EXTRAOPTS {{ haproxy_service_extra_args }}
ExecReload={{ haproxy_prefix }}/sbin/haproxy -Ws -f $CONFIG -c $EXTRAOPTS {{ haproxy_service_extra_args }}
ExecReload=/usr/bin/kill -USR2 $MAINPID
LimitNOFILE={{ maxconn * ansible_facts.processor_cores }}
KillMode=mixed
Restart=always
SuccessExitStatus=143
Type=notify

